<ul class='nav nav-list'>
	<li class='nav-header'>
		My Lists
		<span class='right_button'><%= link_to image_tag("plus.png", :border=>0, :size => "20x20", :alt => "Add List"), createlist_path %> </span>
	</li>
	<% lists.each do |list| %>
	<% if list.id != current_list.id %>
	<li>
		<%= link_to list.name, default_home_path(user.id, list.id) %>
		<% if list.deletable == true %>
		<span class='right_button'><%= link_to image_tag("closev2.png", :border=>0, :size => "15x15", :alt => "Delete"), delete_list_path(list.id) %></span>
		<% end %>
	</li>
	<% else %>
	<li class='active'>
		<a href='#'><i class="icon-search"></i><%= list.name %></a>
		<% if list.deletable == true %>
		<span class='right_button'><%= link_to image_tag("closev2.png", :border=>0, :size => "15x15", :alt => "Delete"), delete_list_path(list.id) %></span>
		<% end %>
	</li>
	<% end %>
	<% end %>
</ul>
