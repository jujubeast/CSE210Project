<div class="modal hide" id="modal_create_list">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">
			Ã—
		</button>
		<h3>Create New List</h3>
	</div>
	<%= form_for list, :url => { :action => :create } do |f| %>

	<div class="modal-body">
		<div class="field">
			<%= f.label :name%>
			<%= f.text_field :name, :placeholder=>"Required"  %>
		</div>

		<div class="control-group">
		    <label class="control-label">Allow Permission to Edit</label>
		    <div class="controls">
                <label class='checkbox'><input type="checkbox" checked='checked' disabled="disabled"><span><%= user.first_name+' '+user.last_name %> (me) </span><i class='icon-lock'></i></label>
			<% friends.each do |friend| %>
			    <label class='checkbox'> <%= check_box_tag 'friend.'+friend.id.to_s %><span><%= friend.first_name+' '+friend.last_name %></span></label>
			<% end %>
			</div>
		</div>
	</div>

	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal">Close</a>
		<button type='submit' name='commit' class="btn btn-primary">
			Save changes
		</button>
	</div>
	<% end %>
</div>