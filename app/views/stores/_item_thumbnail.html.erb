<style type="text/css">
	ul {
		margin: 0;
		padding: 0;
	}
	ul li {
		list-style: none;
	}
	#div {
		height: 270px;
		width: 200px;
	}

	#div div label {

	}
	#div ul li {
		float: center;
		position: relative;
		padding: 0px 30px;
		height: 36px;
		line-height: 36px;
		font-weight: bold;
	}
	#div ul li ul {
		position: absolute;
		top: 0px;
		left: 40px;
		display: none;
		width: 120px;
		background: #CC0000;
		z-index: 900;
	}
	#div ul li ul li {
		display: block;
		height: 26px;
		line-height: 26px;
		background-color: #dddddd;
		padding: 0px 12px;
		border-bottom: 1px #ffffff solid;
		font-weight: normal;
	}
	#div ul li a {
		color: #000000;
		text-decoration: none;
		font-size: 12px;
	}
	#div ul li a:hover {
		color: #cc0000;
	}
	#img1 {
		float: right;
		position: relative;
		width: 20px;
		height: 20px;
	}
	#img2 {
		float: center;
		position: relative;
		margin-left: -20px;
		width: 180px;
		height: 180px;
	}
	#img3 {
		float: left;
		margin-left: -20px;
		width: 20px;
		height: 20px;
	}
</style>
<script type="text/javascript">
	$(function() {
		$("#div ul li").hover(function() {
			$(this).children("ul").slideDown()
		}, function() {
			$(this).children("ul").slideUp()
		})
	})
</script>

