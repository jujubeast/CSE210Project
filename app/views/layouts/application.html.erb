<!DOCTYPE html>
<html>
	<head>
		<title>App</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "jquery.js", "jquery_ujs.js" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class='navbar-inner'>
				<div class='container'>
					<%= render :partial => "layouts/header"%>
					<% if @user %>
					<%= render :partial => "layouts/nav_bar"%>
					<%= render :partial => "simple_search/search"%>

					<% end %>
				</div>
			</div>
		</div>
		<div class='container' >
			<%= yield %>
		</div>
		<div class='container'><%= render :partial =>"layouts/footer"%></div>
	</body>
</html>
